            "key_code": "x",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "C-x",
                "value": 1
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "C-x",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "C-x",
                  "value": 0
                }
              }
            ]
          },
          "conditions": [
            {
              "type": "frontmost_application_unless",
