  "title": "Emacs key bindings",
  "rules": [
    {
      "description": "C-x C-f to Open",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "o",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "C-x",
              "value": 1
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.jetbrains.intellij$"
              ]
            }
          ]
        }
      ]
    },
