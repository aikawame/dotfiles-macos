{
  "title": "Windows key bindings",
  "rules": [
    {
      "description": "F5 to Reload",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f5",
            "modifiers": {
              "optional": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "r",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2",
                "^com\\.jetbrains\\.intellij",
                "^com\\.microsoft\\.VSCode"
              ]
            }
          ]
        }
      ]
    }
  ]
}
